<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DIYRecipes" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="34">false</item>
    </style>

    <style name="Theme.DIYRecipes.Starting" parent="Theme.MySplash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="windowSplashScreenBackground">#FFf1ece1</item>
        <item name="postSplashScreenTheme">@style/Theme.DIYRecipes</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="tiramisu">icon_preferred
        </item>
    </style>

</resources>
